/* pages/index/innReservation/innReservation.wxss */

.innReservation {
  position: relative;
}

.innReservation-head {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  z-index: 1000;
  padding: 10rpx 0 30rpx 0;
}

.innReservation-one {
  width: 46%;
  overflow: hidden;
  margin: 0 2%;
}

.innReservation-img {
  display: block;
  height: 180rpx;
}

.innReservation-text {
  display: block;
  font-size: 30rpx;
  text-align: center;
  margin: 10rpx 0;
}

.session {
  width: 100%;
  padding-left: 40%;
  position: relative;
}

.yuding {
  display: inline-block;
  text-align: center;
  font-size: 30rpx;
  background: darkblue;
  color: #fff;
  padding: 10rpx 20rpx;
}

.session-button {
  position: absolute;
  top: 10rpx;
  left: 46%;
  opacity: 0;
}

.rooms {
  width: 97%;
  overflow-y: scroll;
  position: absolute;
  left: 1%;
  top: 585rpx;
}

.bigroom {
  display: flex;
  border: 4rpx solid blue;
  border-radius: 10rpx;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.roompic {
  width: 30%;
  height: 200rpx;
  padding: 0 30rpx 20rpx 20rpx;
}
.texts{
  color: #c0c0c0;
}
.roomtext {
  width: 100%;
  display: block;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 900;
}

.small {
   width: 100%;
  display: block;
  font-size: 26rpx;
  line-height: 36rpx;
}

.red {
  color: red;
}
